<script>
    function init_countdown() {
        const counter = document.getElementById("countdown") as HTMLElement;
        const countDownDate = new Date("Dec 1, 2024 20:20:00").getTime();

        function tick() {
            const now = new Date().getTime();
            const dt = countDownDate - now;
            // Time calculations for days, hours, minutes and seconds
            const days = Math.floor(dt / (1000 * 60 * 60 * 24));
            const hours = Math.floor((dt % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((dt % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((dt % (1000 * 60)) / 1000);
            // Display the result in the element with id="demo"
            counter.innerHTML = "" + days + "d " + hours + "h " + minutes + "m " + seconds + "s ";
        }
        tick();
        setInterval(tick, 1000);
    }

    init_countdown();
    document.addEventListener("astro:page-load", init_countdown);
</script>

