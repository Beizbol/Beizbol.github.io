---
import Card from "../../components/LinkCard.astro";
import Page from "../../layouts/Page.astro";
---

<Page title="Games">
	<div class="wrap">
		<h1>Welcome to my <span class="text-gradient">Arcade</span></h1>
		<section>
			<h2>Hand-Made Games</h2>
			<!-- <h3>Featured 👀</h3>
			<ul role="list" class="link-card-grid">
				<Card href="/games/santa" title="Santa" body="Help Santa save Christmas!" />
			</ul> -->
			<h3>Arcade Games 🕹️</h3>
			<ul role="list" class="link-card-grid">
				<Card href="/games/stack" title="Stack" body="Pile your blocks to reach the gold prize." />
				<Card href="/games/frogger" title="Frogger" body="Dodge cars and hops logs to reach the finish." />
			</ul>
			<h3>Casino Games 🎰</h3>
			<ul role="list" class="link-card-grid">
				<Card href="/games/cards" title="Cards" body="Play a game of cards with the computer." />
				<Card href="/games/roulette" title="Roulette" body="Place your bets and let the ball roll." />
				<Card href="/games/slots" title="Sunny Slots" body="Live on the sunny side and spin to win it big!" />
			</ul>
			<h3>Puzzle Games 🧠</h3>
			<ul role="list" class="link-card-grid">
				<!-- <Card href="/games/trivia" title="Trivia" body="Put your knowledge to the test!" /> -->
				<Card href="/games/wordle" title="Wordle" body="Guess all the letters in six tries or less." />
				<Card href="/games/jigsaw" title="Jigsaw" body="Finish the puzzle to reveal the image." />
			</ul>
			<h3>Simple Games 🎲</h3>
			<ul role="list" class="link-card-grid">
				<Card href="/games/connect4" title="Connect-4" body="Drop chips to make a line of 4 before your opponent." />
				<Card href="/games/tictactoe" title="TicTacToe" body="The classic 'X's and 'O's" />
			</ul>
		</section>
		<details class="more">
			<summary> More ... </summary>
			<h3>Hand-Picked From Across The Web</h3>
			<ul role="list" class="link-card-grid">
				<Card href="/html5/breakout/index.html" title="Brick Breaker" body="The classic brick breaker game." />
				<Card href="/html5/chromedino/index.html" title="Dino Jump" body="Jump the cacti and duck the birds." />
			</ul>
			<ul role="list" class="link-card-grid">
				<Card href="/games/minecraft" title="Minecraft JS" body="Explore a voxel world in the Minecraft JS Edition." />
				<Card href="/games/flash/tanks" title="Tanks" body="Shoot a variety of projectiles to clear the battlefield of enemy tanks." />
				<Card href="/games/flash/worlds-hardest-game" title="World's Hardest Game" body="Put your skills to the test with each harder level." />
			</ul>
			<ul role="list" class="link-card-grid">
				<Card href="/games/flash/age-of-war" title="Age of War" body="Race through the ages to survive and defeat your opponent." />
				<Card href="/games/flash/motherload" title="Motherload" body="Mine and explore an alien planet, just don't run out of fuel!" />
				<Card href="/html5/cookieclicker/index.html" title="Cookie Clicker" body="The original exponential idle game." />
			</ul>
			<ul role="list" class="link-card-grid">
				<Card href="/html5/asteroids/index.html" title="Asteroids" body="Dodge & defend your ship from the splitting space rocks." />
				<Card href="/html5/flappybird/index.html" title="Flappy Bird" body="The age old battle of the mind." />
				<Card href="/html5/pacman/index.html" title="Pacman" body="The age old battle of the mind." />
				<Card href="/html5/tetris/index.html" title="Tetris" body="The age old battle of the mind." />
				<Card href="/games/whack" title="Whack-a-Mole" body="How many can you hit before time runs out?" />
				<Card href="/games/jump" title="Jump" body="Jump in time to set a record" />
			</ul>
		</details>
	</div>
</Page>

<style>
	details {
		/* border: 1px solid #aaa; */
		border-radius: 4px;
		padding: 0.5em 0.5em 0;
	}

	summary {
		font-weight: bold;
		margin: -0.5em -0.5em 0;
		padding: 0.5em;
	}

	details[open] {
		padding: 0.5em;
	}

	details[open] summary {
		border-bottom: 1px solid #aaa;
		margin-bottom: 0.5em;
	}

	:root {
		--color-gradient: linear-gradient(0deg, red, orange);
	}

	h1 {
		margin: 2rem 0;
	}

	.wrap {
		padding: 2rem;
		display: grid;
	}

	section {
		margin: 1rem 0;
		/* background-color: aquamarine; */
	}

	.text-gradient {
		font-weight: 900;
		background-image: var(--color-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 100% 200%;
		background-position-y: 100%;
		border-radius: 0.4rem;
		animation: pulse 4s ease-in-out infinite;
	}

	@keyframes pulse {
		0%,
		100% {
			background-position-y: 0%;
		}
		50% {
			background-position-y: 80%;
		}
	}

	.instructions {
		line-height: 1.6;
		margin: 1rem 0;
		background: #4f39fa;
		padding: 1rem;
		border-radius: 0.4rem;
		color: white;
	}

	.instructions code {
		font-size: 0.875em;
		border: 0.1em solid var(--color-border);
		border-radius: 4px;
		padding: 0.15em 0.25em;
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(28ch, 1fr));
		gap: 1rem;
		padding: 0;
	}

	.hide {
		display: none;
	}
</style>
