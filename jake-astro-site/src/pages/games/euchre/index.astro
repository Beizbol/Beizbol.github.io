---
import Page from "../../../layouts/Page.astro";
// import Game from "../../../layouts/Game.astro";

let hands = { Player: "", Cpu1: "", Cpu2: "", Cpu3: "" };
---

<Page title="jEuchre">
  <div class="top">
    <div class="cpu">
      <div class="backs"></div>
      <div class="backs"></div>
      <div class="backs"></div>
      <div class="backs"></div>
      <div class="backs"></div>
    </div>
  </div>
  <div class="mid">
    <div class="cpu">
      <div class="backs"></div>
      <div class="backs"></div>
      <div class="backs"></div>
      <div class="backs"></div>
      <div class="backs"></div>
    </div>
    <div class="pile"></div>
    <div class="cpu">
      <div class="backs"></div>
      <div class="backs"></div>
      <div class="backs"></div>
      <div class="backs"></div>
      <div class="backs"></div>
    </div>
  </div>
  <div class="player">
    <div class="cards"></div>
  </div>
  <div class="btns">
    <button class="pass">Pass</button>
    <button class="orderUp">Order Up</button>
    <button class="play">Play</button>
  </div>
  <style>
    .backs,
    .cards {
      width: 2.5rem;
      height: 3.5rem;
      margin: 0.1rem;
      border: 0.25rem solid whitesmoke;
      background-color: aquamarine;
    }

    .btns,
    .top,
    .player {
      padding: 1rem;
      max-width: 80rem;
      display: flex;
      justify-content: center;
      background-color: green;
    }
    .mid {
      padding: 1rem;
      max-width: 80rem;
      display: flex;
      justify-content: space-between;
      background-color: green;
    }
    .cpu {
      display: flex;
      flex-flow: row;
    }

    .pile {
      width: 4rem;
      height: 4rem;
      background-color: blueviolet;
    }

    .player {
      background-color: green;
    }

    .backs {
      background-color: red;
    }
  </style>

  <script>
    import Euchre from "./eucher.js";

    const game = new Euchre();
    console.log(game);
    game.test();
  </script>
</Page>
